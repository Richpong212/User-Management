<%- include('./layout/header.ejs') %>
<h1>Reset Password</h1>
<form  method="post">  
    <div>
          <input 
          type="password" 
          name="password" 
          id="password"
          placeholder="Enter your password"
          size="40"
          required
          >
    </div>  
    <br>
    <input type="hidden" value="userId" value="<%userId%>">
    <div>
        <button type="submit">Reset Password</button>
        <br>
        <a href="/resend-verification">resend verification link</a>
        <br>
        <a href="/forget-password">forgot password</a>

    </div> 
</form>


